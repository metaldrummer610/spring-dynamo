root=true

[*]
insert_final_newline = true
end_of_line = lf
charset = utf-8

[*.md]
trim_trailing_whitespace = true

[Jenkinsfile]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{kt,kts,java,sql}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
disabled_rules=filename,import-ordering,no-wildcard-imports
max_line_length = 200

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.bat]
end_of_line = crlf

[Makefile]
indent_style = tab
